<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="moveAP" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ahthek.Move">
   <children>
      <RadioButton fx:id="moveFullRadioButton" layoutX="14.0" layoutY="238.0" mnemonicParsing="false" selected="true" text="Move-Full">
         <toggleGroup>
            <ToggleGroup fx:id="moveGroup" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="moveTrimRadioButton" layoutX="101.0" layoutY="238.0" mnemonicParsing="false" text="Move-Trim" toggleGroup="$moveGroup" />
      <Button fx:id="startButton" layoutX="515.0" layoutY="352.0" mnemonicParsing="false" onAction="#generateBatFile" text="START">
         <graphic>
            <FontIcon iconLiteral="fas-play" />
         </graphic>
      </Button>
      <Label layoutX="14.0" layoutY="14.0" text="EDL file(s) to be processed:" />
      <ListView fx:id="edlFileListView" layoutX="14.0" layoutY="31.0" prefHeight="200.0" prefWidth="524.0" />
      <VBox alignment="TOP_CENTER" layoutX="538.0" layoutY="31.0" prefHeight="200.0" prefWidth="41.0" spacing="5.0">
         <children>
            <Button fx:id="selectEdlFileButton" mnemonicParsing="false" onAction="#selectFiles">
               <graphic>
                  <FontIcon iconLiteral="fas-plus" />
               </graphic>
               <tooltip>
                  <Tooltip text="Add .edl file(s)" />
               </tooltip>
            </Button>
            <Button fx:id="removeEdlFileButton" mnemonicParsing="false" onAction="#removeFiles">
               <graphic>
                  <FontIcon iconLiteral="fas-minus" />
               </graphic>
               <tooltip>
                  <Tooltip text="Remove selected .edl file(s)" />
               </tooltip>
            </Button>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearFiles">
               <graphic>
                  <FontIcon iconLiteral="fas-trash" />
               </graphic>
               <tooltip>
                  <Tooltip text="Remove all .edl file(s)" />
               </tooltip>
            </Button>
         </children>
      </VBox>
      <TextField fx:id="batchFileFolderTextField" editable="false" layoutX="14.0" layoutY="286.0" prefHeight="25.0" prefWidth="524.0" />
      <Button fx:id="batchFileFolderButton" layoutX="546.0" layoutY="287.0" mnemonicParsing="false" onAction="#selectBatFolder">
         <graphic>
            <FontIcon iconLiteral="fas-folder-open" />
         </graphic>
      </Button>
      <Label layoutX="14.0" layoutY="269.0" text="Save the .bat files to perform the task in the following folder" />
      <Label fx:id="batSampleLabel" alignment="TOP_LEFT" layoutX="14.0" layoutY="313.0" prefHeight="39.0" prefWidth="524.0" text="* bat file name example" wrapText="true" />
   </children>
</AnchorPane>
