<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="batCombineAP" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ahthek.BatController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Combine the following batch (.bat) file:" />
      <ListView fx:id="batFileListView" layoutX="14.0" layoutY="31.0" prefHeight="200.0" prefWidth="548.0" />
      <VBox alignment="TOP_CENTER" layoutX="562.0" layoutY="31.0" prefHeight="200.0" prefWidth="43.0" spacing="5.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#selectFiles">
               <graphic>
                  <FontIcon iconLiteral="fas-plus" />
               </graphic>
               <tooltip>
                  <Tooltip text="Add .bat file(s)" />
               </tooltip>
            </Button>
            <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeFiles">
               <graphic>
                  <FontIcon iconLiteral="fas-minus" />
               </graphic>
               <tooltip>
                  <Tooltip text="Remove selected .bat file(s)" />
               </tooltip>
            </Button>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearFiles">
               <graphic>
                  <FontIcon iconLiteral="fas-trash" />
               </graphic>
               <tooltip>
                  <Tooltip text="Remove all .bat file(s)" />
               </tooltip>
            </Button>
         </children>
      </VBox>
      <CheckBox fx:id="putInFolderCheckBox" layoutX="14.0" layoutY="245.0" mnemonicParsing="false" text="Place all resulting file into the following folder (otherwise placed in source file location)" />
      <TextField fx:id="putInFolderTextField" disable="true" editable="false" layoutX="14.0" layoutY="262.0" prefHeight="25.0" prefWidth="548.0" />
      <Button fx:id="allFolderButton" disable="true" layoutX="569.0" layoutY="263.0" mnemonicParsing="false" onAction="#selectFileFolder">
         <graphic>
            <FontIcon iconLiteral="fas-folder-open" />
         </graphic>
      </Button>
      <TextField fx:id="combinedNameTextField" layoutX="14.0" layoutY="295.0" prefHeight="25.0" prefWidth="548.0" promptText="Enter the file name for the combined batch file (without the '.bat' extension)" />
      <Button fx:id="combinedNameButton" layoutX="570.0" layoutY="296.0" mnemonicParsing="false" onAction="#generateCombinedName">
         <graphic>
            <FontIcon iconLiteral="fas-random" />
         </graphic>
         <tooltip>
            <Tooltip text="Generate for me!" />
         </tooltip>
      </Button>
      <Label layoutX="14.0" layoutY="337.0" text="Save the combined batch file into the following folder:" />
      <TextField fx:id="batchFileFolderTextField" editable="false" layoutX="14.0" layoutY="354.0" prefHeight="25.0" prefWidth="548.0" />
      <Button fx:id="batchFileFolderButton" layoutX="569.0" layoutY="354.0" mnemonicParsing="false" onAction="#selectCombinedFolder">
         <graphic>
            <FontIcon iconLiteral="fas-folder-open" />
         </graphic>
      </Button>
      <Button fx:id="startButton" layoutX="538.0" layoutY="442.0" mnemonicParsing="false" onAction="#generateCombinedBat" text="START">
         <graphic>
            <FontIcon iconLiteral="fas-play" />
         </graphic></Button>
      <HBox fx:id="durationHBox" alignment="CENTER" layoutX="14.0" layoutY="433.0" prefHeight="42.0" prefWidth="259.0">
         <children>
            <VBox alignment="CENTER" prefHeight="60.0" prefWidth="100.0">
               <children>
                  <Label text="Days" />
                  <Spinner fx:id="dSpinner" editable="true" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="60.0" prefWidth="100.0">
               <children>
                  <Label text="Hours" />
                  <Spinner fx:id="hSpinner" editable="true" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="60.0" prefWidth="100.0">
               <children>
                  <Label text="Minutes" />
                  <Spinner fx:id="mSpinner" editable="true" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="98.0" prefWidth="100.0">
               <children>
                  <Label text="Seconds" />
                  <Spinner fx:id="sSpinner" editable="true" />
               </children>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <CheckBox fx:id="shutdownCheckBox" layoutX="14.0" layoutY="391.0" mnemonicParsing="false" text="Include 'Shutdown' command to the end of the combined batch file" />
      <Label fx:id="durationLabel" layoutX="14.0" layoutY="414.0" text="How long does it take after all tasks are completed before system shutdown?" />
      <Button fx:id="normalizeButton" layoutX="288.0" layoutY="442.0" mnemonicParsing="false" onAction="#normalizeDuration" text="Normalize" />
      <Button fx:id="resetButton" layoutX="377.0" layoutY="442.0" mnemonicParsing="false" onAction="#resetDuration" text="Reset" />
      <Label fx:id="estimateLabel" layoutX="324.0" layoutY="14.0" />
   </children>
</AnchorPane>
